<mvc:View controllerName="project1.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <Shell id="shell">
        <tnt:ToolPage id="toolPage">
            <tnt:header>
                <tnt:ToolHeader>
                    <Button id="sideNavigationToggleButton"
                        icon="sap-icon://menu2"
                        type="Transparent"
                        press=".onMenuButtonPress" />
                    <Title text="{i18n>appTitle}" level="H1" />
                    <ToolbarSpacer />
                    <Button 
                        id="themeToggleButton"
                        icon="sap-icon://palette" 
                        type="Transparent"
                        press=".onThemeToggle" 
                        tooltip="Toggle Light/Dark Mode" />
                    <Avatar 
                        id="headerAvatar"
                        src="{view>/photoUrl}" 
                        displaySize="XS" 
                        press=".onAvatarPress" 
                        displayShape="Circle"
                        class="sapUiTinyMarginBegin" />
                </tnt:ToolHeader>
            </tnt:header>
            <tnt:mainContents>
                <App id="app" class="appContainer" />
            </tnt:mainContents>
        </tnt:ToolPage>
    </Shell>
</mvc:View>