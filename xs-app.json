{
    "welcomeFile": "index.html",
    "routes": [
        {
            "source": "^/SuccessFactors_API/(.*)$",
            "target": "$1",
            "destination": "SuccessFactors_API",
            "authenticationType": "xsuaa",
            "csrfProtection": true,
            "forwardAuthToken": true,
            "tokenHandler": {
                "type": "standard"
            }
        },
        {
            "source": "^/user-api/(.*)$",
            "target": "$1",
            "service": "sap-approuter-userapi",
            "csrfProtection": true
        },
        {
            "source": "^/(.*)$",
            "target": "$1",
            "localDir": "dist"
        }
    ]
}